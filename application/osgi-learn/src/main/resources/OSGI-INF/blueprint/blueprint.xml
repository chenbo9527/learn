<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
       http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="test/hello">
            <action class="com.weibangong.osgi.karaf.HelloShellCommand"/>
        </command>
    </command-bundle>

    <bean class="com.weibangong.osgi.karaf.SimpleCommand" id="simpleCommand"/>

    <service auto-export="all-classes" ref="simpleCommand">
        <service-properties>
            <entry key="osgi.command.scope">
                <value>simple</value>
            </entry>
            <entry key="osgi.command.function">
                <array value-type="java.lang.String">
                    <value>first</value>
                    <value>second</value>
                    <value>hello</value>
                </array>
            </entry>
        </service-properties>
    </service>
</blueprint>